<% include ../header %>

	<div class="jumbotron">
		<h1>Blog de Teste</h1>
		<p class="lead">Este blog é apenas um teste, foi desenvolvido usando Node.JS, MongoDB, EJS, Twtitter Bootstrap.</p>
		<p><a class="btn btn-lg btn-success" href="/postar" role="button">Começar a postar</a></p>
	</div>

	<div class="row marketing">
        <div class="col-lg-12">
        	<% posts.forEach(function(post, index) { %>
        		<article>
					<h4><a href="/post/<%-post._id%>"><%- post.title %></a></h4>
					<p><%- post.body %></p><br>
					<div class="row">
						<div class="col-lg-8">
							<p>
								<strong>Autor:</strong> Teste |
								<strong>Data: </strong><%- post.createdAt %> |
								<strong><%- post.comments.length %> Comentários</strong> |
								<% if (post.tags){ %>
									<strong>Tags:</strong>
									<% post.tags.split(',').forEach(function(tag) { %>
										<span class="label label-info"><%- tag %></span>
									<% }) %>
								<% } %>
							</p>
						</div>
					</div>
				</article>
				<div class="row">
					<hr />
				</div>
			<% }) %>
        </div>
      </div>

<% include ../footer %>