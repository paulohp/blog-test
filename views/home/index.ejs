<% include ../header %>

	<div class="jumbotron">
		<h1>Blog de Teste</h1>
		<p class="lead">Este blog é apenas um teste, foi desenvolvido usando Node.JS, MongoDB, EJS, Twtitter Bootstrap.</p>
		<p><a class="btn btn-lg btn-success" href="/postar" role="button">Começar a postar</a></p>
	</div>

	<div class="row marketing">
        <div class="col-lg-12">
        	<% posts.forEach(function(post, index) { %>
				<h4><%- post.title %></h4>
				<p><%- post.body %></p>
				<a href="/post/<%-post._id%>">ver mais</a>
			<% }) %>
        </div>
      </div>

<% include ../footer %>