<% include ../header %>
	<section class="post">
		<header class="post-header">
			<h1 class="pull-left"><%- post.title %></h1>
			<% if (sess.user._id == post.user){ %>
				<div class="actions pull-right">
					<form action="/post/<%-post._id%>" method="post">
						<a href="/post/<%-post._id%>/editar" class="btn btn-default">Editar</a>
						<input type="hidden" name="_method" value="DELETE">
						<button type="submit" class="btn btn-danger">Apagar</button>
					</form>
				</div>
			<% } %>
		</header>
		<article class="post-body">
			<span><%- post.body %></span>
		</article>
		<footer class="post-footer">
			<% if (post.tags){ %>
				<div class="tags" >
					<% post.tags.split(',').forEach(function(tag) { %>
						<span class="label label-info"><%- tag %></span>
					<% }) %>
				</div>
			<% } %>
			<div class="infos">
				<small>Autor: <%- user.email %></small>
			</div>
		</footer>
	</section>
	<section class="comments">
		<header>
			<h3>Comentários</h3>
		</header>
		<article>
			<% if (post.comments) { %>
				<% post.comments.forEach(function(comment){ %>
					<div>
						<strong><%- comment.email %>: </strong>
						<span><%- comment.body  %></span>
					</div>
				<% }) %>
			<% } %>
		</article>
		<hr />
		<section class="new-comment">
			<article>
				<form action="/post/<%-post._id%>/comment" method="post">
					<div class="control-group">
						<label for="comment[email]">E-Mail</label>
						<input name="comment[email]" class="form-control" type="text">
					</div>

					<div class="control-group">
						<label for="comment[body]">Comentário</label>
						<textarea class="form-control" name="comment[body]"></textarea>
					</div>

					<div class="control-group">
						<button type="submit" class="btn">Comentar</button>
					</div>
				</form>
			</article>
		</section>
	</section>


<% include ../footer %>