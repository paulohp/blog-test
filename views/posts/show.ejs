<% include ../header %>
	<section class="post">
		<header>
			<h1><%- post.title %></h1>
		</header>
		<article>
			<span><%- post.body %></span>
		</article>
		<footer>
			<% if (post.tags){ %>
				<div class="tags" >
					<% post.tags.split(',').forEach(function(tag) { %>
						<span class="label label-info"><%- tag %></span>
					<% }) %>
				</div>
			<% } %>
			<div class="infos">
				<small>Autor: <%- user.email %></small>
			</div>
		</footer>
	</section>
	<hr />
