<% include ../header %>

	<div class="row marketing">
		<h3>Todos os posts</h3>
        <div class="col-lg-12">
        	<% posts.forEach(function(post, index) { %>
				<h4><%- post.title %></h4>
				<p><%- post.body %></p>
				<div class="row">
					<small> <%- post.created_at %></small>
				</div>
				<hr />
			<% }) %>
        </div>
      </div>

