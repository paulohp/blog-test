<% include ../header %>

	<div class="row marketing">
		<header>
			<h3>Todos os posts</h3>
			<input type="text" name="search" id="search" class="form-control" placeholder="Busca">
		</header>
        <div class="col-lg-12">
        	<% posts.forEach(function(post, index) { %>
				<h4><%- post.title %></h4>
				<p><%- post.body %></p>
				<div class="row">
					<div class="col-lg-12">
						<p>
							<strong>Autor:</strong> Teste |
							<strong>Data: </strong><%=: post.createdAt | formatDate %> |
							<strong><%- post.comments.length %> Coment√°rios</strong> |
							<% if (post.tags){ %>
								<strong>Tags:</strong>
								<% post.tags.split(',').forEach(function(tag) { %>
									<span class="label label-info"><%- tag %></span>
								<% }) %>
							<% } %>
						</p>
					</div>
					</div>
				<hr />
			<% }) %>
        </div>
      </div>

<% include ../footer %>